{
  "name": "code-gpt",
  "displayName": "CodeGPT",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codegpt.output",
    "onCommand:code-gpt.explainCode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-gpt.explainCode",
        "title": "[CodeGPT] Explain this function"
      },
      {
        "command": "code-gpt.writeDocumentation",
        "title": "[CodeGPT] Write documentation for this function"
      },
      {
        "command": "code-gpt.simplifyCode",
        "title": "[CodeGPT] Simplify code"
      },
      {
        "command": "code-gpt.generateTestcases",
        "title": "[CodeGPT] Generate testcases for this function"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codegpt",
          "title": "CodeGPT",
          "icon": "static/chatgpt.png"
        }
      ]
    },
    "views": {
      "codegpt": [
        {
          "type": "webview",
          "id": "codegpt.output",
          "name": "CodeGPT"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "code-gpt.explainCode",
          "group": "code-gpt-menu-group@1",
          "when": "editorTextFocus"
        },
        {
          "command": "code-gpt.writeDocumentation",
          "group": "code-gpt-menu-group@2",
          "when": "editorTextFocus"
        },
        {
          "command": "code-gpt.simplifyCode",
          "group": "code-gpt-menu-group@3",
          "when": "editorTextFocus"
        },
        {
          "command": "code-gpt.generateTestcases",
          "group": "code-gpt-menu-group@4",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "code-gpt.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "code-gpt.writeDocumentation",
          "when": "editorHasSelection"
        },
        {
          "command": "code-gpt.simplifyCode",
          "when": "editorHasSelection"
        },
        {
          "command": "code-gpt.generateTestcases",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.2",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "openai": "^3.1.0"
  }
}
